% get the user home
{ok,[[Home]]} = init:get_argument(home).
% construct the path to "user_default.beam"
UserDefault = filename:join([Home,"dotfiles","add","erlang","user_default"]).
% compile "user_default.erl" whenever shell is started
compile:file(UserDefault, {outdir,filename:dirname(UserDefault)}).
% load "user_default.beam"
code:load_abs(UserDefault).
io:format(" ... loading ~p~n", [UserDefault]).

code:add_patha(Home).
io:format(" ... code:add_patha(~p).~n",[Home]).
